<% layout ('layouts/main.ejs') %>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="card">
                        <div class="card-header">
                            Registro free
                        </div>
                        <div class="card-body">
                            <% if(signupMessage) { %>
                                <p class="text-danger"> <%= signupMessage %> </p>
                            <% } %> 
        
                                <form action="/signup" method="POST">
                                    <div class="form-group">
                                        <input type="email" class="form-control" name="email" placeholder="insert name">
                                    </div>
                                    
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="password" placeholder="insert E-mail">
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">Register</button>
                        
                                </form>
                        </div>
                    </div>
            </div>
    </div>
</div>
