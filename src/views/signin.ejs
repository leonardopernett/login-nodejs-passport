
<% layout ('layouts/main.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    iniciar sesion 
                </div>
                <div class="card-body">
                    <% if(signinMessage) { %>
                        <p class="text-danger"> <%= signinMessage %> </p>
                    <% } %> 

                        <form action="/signin" method="POST">
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" placeholder="insert name">
                            </div>
                            
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" placeholder="insert E-mail">
                            </div>
                            
                            <button type="submit" class="btn btn-success">INICAR </button>
                
                        </form>
                </div>
            </div>
    </div>
</div>
</div>
